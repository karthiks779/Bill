<script>
  var sum=0;
  var count=1;
function myFunction() {  
 var j={m1:"mahalingeshwara hotel",s1:"sri sai sundar",b1:"bar",n1:"nmpt",
m1:"matashri",c1:"canteen",h1:"hosabettu",m1:"madya"};
let x = document.getElementById("browser");
for(i in j)
{
    if(x.value==i)
    {
        x.value=j[i];
    }
}
var b=document.getElementById("browser").value
if((document.getElementById("num").value)!="" &&b[(b.length)-1] ==".")
{
  var table = document.getElementById("myTable");
  var row = table.insertRow(0);
  var cell1 = row.insertCell(0);
  var cell2 = row.insertCell(1);
  count++;
if((document.getElementById("browser").value)=="micro"|| (document.getElementById("browser").value)=="." )
{
  cell1.innerHTML =count-1;
cell2.innerHTML =document.getElementById("num").value
}
else
{
  cell1.innerHTML = document.getElementById("browser").value
  cell2.innerHTML =document.getElementById("num").value
}
document.getElementById("browser").value="";
  sum+=parseInt(document.getElementById("num").value);
document.getElementById("num").value="";
  document.getElementById("browser").value=""+count+".";
  
  document.getElementById("demo").innerHTML=sum;
  document.getElementById("demo1").innerHTML=sum;
}
  if(count<15)
  {
  var h=""+count
location.hash = h;
}
  return "u";
}
    
</script>

